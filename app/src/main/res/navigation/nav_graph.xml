<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.a.up.home.ui.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_navigation"
            app:destination="@id/navigation" />
    </fragment>
    <navigation android:id="@+id/navigation"
        app:startDestination="@id/signUpFragment">
        <fragment
            android:id="@+id/signUpFragment"
            android:name="com.a.up.user.ui.SignUpFragment"
            android:label="fragment_sign_up"
            tools:layout="@layout/fragment_sign_up" />
        <fragment
            android:id="@+id/loginFragment"
            android:name="com.a.up.user.ui.LoginFragment"
            android:label="fragment_login"
            tools:layout="@layout/fragment_login">
            <action
                android:id="@+id/action_loginFragment_to_signUpFragment"
                app:destination="@id/signUpFragment" />
        </fragment>
        <action
            android:id="@+id/action_global_homeFragment1"
            app:destination="@id/navigation2" />
    </navigation>
    <navigation android:id="@+id/navigation2"
        app:startDestination="@id/homeFragment1">
        <fragment
            android:id="@+id/homeFragment1"
            android:name="com.a.up.home.ui.HomeFragment1"
            android:label="fragment_home1"
            tools:layout="@layout/fragment_home1">
            <action
                android:id="@+id/action_homeFragment1_to_homeFragment2"
                app:destination="@id/homeFragment2" />
        </fragment>
        <fragment
            android:id="@+id/homeFragment2"
            android:name="com.a.up.home.ui.HomeFragment2"
            android:label="fragment_home2"
            tools:layout="@layout/fragment_home2">
            <action
                android:id="@+id/action_homeFragment2_to_homeFragment3"
                app:destination="@id/homeFragment3" />
        </fragment>
        <fragment
            android:id="@+id/homeFragment3"
            android:name="com.a.up.home.ui.HomeFragment3"
            android:label="fragment_home3"
            tools:layout="@layout/fragment_home3" />
    </navigation>
</navigation>